{
	"info": {
		"_postman_id": "process-api-collection",
		"name": "Process Management API",
		"description": "Collection for testing Process Management endpoints in QMS system",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Create Process",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Quality Control Process\",\n  \"location\": \"Building A - Floor 2\",\n  \"parentSite\": \"{{siteId}}\",\n  \"processCode\": \"QCP-001\",\n  \"note\": \"Main quality control process for incoming materials\",\n  \"modules\": [\"{{moduleId1}}\", \"{{moduleId2}}\"],\n  \"status\": true,\n  \"acrossMultipleSites\": false\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/v1/processes",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"processes"
					]
				},
				"description": "Creates a new process with the provided information. Requires 'manageProcesses' permission."
			},
			"response": []
		},
		{
			"name": "Get All Processes",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/v1/processes?page=1&limit=10&search=quality",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"processes"
					],
					"query": [
						{
							"key": "page",
							"value": "1",
							"description": "Page number for pagination"
						},
						{
							"key": "limit",
							"value": "10",
							"description": "Number of processes per page"
						},
						{
							"key": "search",
							"value": "quality",
							"description": "Search term to filter processes by name"
						}
					]
				},
				"description": "Retrieves all processes with pagination support. Access is role-based: admins see processes they created, sub-admins see processes created by their parent admin."
			},
			"response": []
		},
		{
			"name": "Get Process by ID",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/v1/processes/{{processId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"processes",
						"{{processId}}"
					]
				},
				"description": "Retrieves a specific process by its ID. Requires 'manageProcesses' permission."
			},
			"response": []
		},
		{
			"name": "Update Process",
			"request": {
				"method": "PATCH",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Updated Quality Control Process\",\n  \"location\": \"Building A - Floor 3\",\n  \"parentSite\": \"{{siteId}}\",\n  \"processCode\": \"QCP-001-UPD\",\n  \"note\": \"Updated quality control process with enhanced procedures\",\n  \"modules\": [\"{{moduleId1}}\", \"{{moduleId3}}\"],\n  \"status\": true,\n  \"acrossMultipleSites\": true\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/v1/processes/{{processId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"processes",
						"{{processId}}"
					]
				},
				"description": "Updates an existing process. Access is role-based: admins can update processes they created, sub-admins can update processes created by their parent admin."
			},
			"response": []
		},
		{
			"name": "Delete Process",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/v1/processes/{{processId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"processes",
						"{{processId}}"
					]
				},
				"description": "Deletes a process. Access is role-based: admins can delete processes they created, sub-admins can delete processes created by their parent admin."
			},
			"response": []
		},
		{
			"name": "Get Process Names by Module",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/v1/processes/names/{{moduleId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"processes",
						"names",
						"{{moduleId}}"
					]
				},
				"description": "Retrieves process names that are associated with a specific module. Returns only the process names for lightweight operations."
			},
			"response": []
		},
		{
			"name": "Get Processes by Module",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/v1/processes/module/{{moduleId}}?page=1&limit=10&search=control",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"processes",
						"module",
						"{{moduleId}}"
					],
					"query": [
						{
							"key": "page",
							"value": "1",
							"description": "Page number for pagination"
						},
						{
							"key": "limit",
							"value": "10",
							"description": "Number of processes per page"
						},
						{
							"key": "search",
							"value": "control",
							"description": "Search term to filter processes by name"
						}
					]
				},
				"description": "Retrieves all processes associated with a specific module with pagination support. Requires 'manageProcesses' permission."
			},
			"response": []
		},
		{
			"name": "Get Processes by Site",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/v1/processes/site/{{siteId}}?page=1&limit=10&search=manufacturing",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"processes",
						"site",
						"{{siteId}}"
					],
					"query": [
						{
							"key": "page",
							"value": "1",
							"description": "Page number for pagination"
						},
						{
							"key": "limit",
							"value": "10",
							"description": "Number of processes per page"
						},
						{
							"key": "search",
							"value": "manufacturing",
							"description": "Search term to filter processes by name"
						}
					]
				},
				"description": "Retrieves all processes associated with a specific site with pagination support. Requires 'manageProcesses' permission."
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// You can add pre-request scripts here",
					"// For example, to automatically refresh tokens or set dynamic variables"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Global test scripts",
					"pm.test(\"Status code is not 500\", function () {",
					"    pm.expect(pm.response.code).to.not.equal(500);",
					"});",
					"",
					"pm.test(\"Response time is less than 5000ms\", function () {",
					"    pm.expect(pm.response.responseTime).to.be.below(5000);",
					"});"
				]
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000",
			"description": "Base URL for the API"
		},
		{
			"key": "token",
			"value": "",
			"description": "JWT authentication token"
		},
		{
			"key": "processId",
			"value": "",
			"description": "Process ID for operations requiring a specific process"
		},
		{
			"key": "siteId",
			"value": "",
			"description": "Site ID for site-related operations"
		},
		{
			"key": "moduleId",
			"value": "",
			"description": "Module ID for module-related operations"
		},
		{
			"key": "moduleId1",
			"value": "",
			"description": "First module ID for testing"
		},
		{
			"key": "moduleId2",
			"value": "",
			"description": "Second module ID for testing"
		},
		{
			"key": "moduleId3",
			"value": "",
			"description": "Third module ID for testing"
		}
	]
}
