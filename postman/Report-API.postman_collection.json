{
	"info": {
		"_postman_id": "report-api-collection",
		"name": "Report API",
		"description": "Collection for testing Report CAPA Workspace endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Create Report",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"workspaceId\": \"{{workspaceId}}\",\n  \"title\": \"Monthly Quality Report\",\n  \"description\": \"Comprehensive quality analysis report for the month\",\n  \"reportType\": \"QUALITY_ANALYSIS\",\n  \"templateId\": \"{{templateId}}\",\n  \"parameters\": {\n    \"dateRange\": {\n      \"startDate\": \"2024-01-01\",\n      \"endDate\": \"2024-01-31\"\n    },\n    \"includeCharts\": true,\n    \"includeStatistics\": true\n  },\n  \"sections\": [\n    {\n      \"name\": \"Executive Summary\",\n      \"content\": \"Summary of key findings\",\n      \"order\": 1\n    },\n    {\n      \"name\": \"Detailed Analysis\",\n      \"content\": \"Detailed breakdown of metrics\",\n      \"order\": 2\n    }\n  ]\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/v1/report",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"report"
					]
				}
			}
		},
		{
			"name": "Get Report by ID",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/v1/report/workspace/{{workspaceId}}/report/{{reportId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"report",
						"workspace",
						"{{workspaceId}}",
						"report",
						"{{reportId}}"
					]
				}
			}
		},
		{
			"name": "Get Reports by Workspace",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/v1/report/workspace/{{workspaceId}}?page=1&limit=10&sortBy=createdAt&sortOrder=desc",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"report",
						"workspace",
						"{{workspaceId}}"
					],
					"query": [
						{
							"key": "page",
							"value": "1"
						},
						{
							"key": "limit",
							"value": "10"
						},
						{
							"key": "sortBy",
							"value": "createdAt"
						},
						{
							"key": "sortOrder",
							"value": "desc"
						},
						{
							"key": "reportType",
							"value": "QUALITY_ANALYSIS",
							"disabled": true
						},
						{
							"key": "status",
							"value": "COMPLETED",
							"disabled": true
						}
					]
				}
			}
		},
		{
			"name": "Update Report",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"title\": \"Updated Monthly Quality Report\",\n  \"description\": \"Updated comprehensive quality analysis report\",\n  \"reportType\": \"QUALITY_ANALYSIS\",\n  \"status\": \"COMPLETED\",\n  \"parameters\": {\n    \"dateRange\": {\n      \"startDate\": \"2024-01-01\",\n      \"endDate\": \"2024-01-31\"\n    },\n    \"includeCharts\": true,\n    \"includeStatistics\": true,\n    \"includeRecommendations\": true\n  },\n  \"sections\": [\n    {\n      \"name\": \"Executive Summary\",\n      \"content\": \"Updated summary of key findings\",\n      \"order\": 1\n    },\n    {\n      \"name\": \"Detailed Analysis\",\n      \"content\": \"Updated detailed breakdown of metrics\",\n      \"order\": 2\n    },\n    {\n      \"name\": \"Recommendations\",\n      \"content\": \"Action items and recommendations\",\n      \"order\": 3\n    }\n  ]\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/v1/report/workspace/{{workspaceId}}/report/{{reportId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"report",
						"workspace",
						"{{workspaceId}}",
						"report",
						"{{reportId}}"
					]
				}
			}
		},
		{
			"name": "Delete Report",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/v1/report/workspace/{{workspaceId}}/report/{{reportId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"report",
						"workspace",
						"{{workspaceId}}",
						"report",
						"{{reportId}}"
					]
				}
			}
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Pre-request script to set dynamic variables",
					"if (!pm.environment.get('workspaceId')) {",
					"    pm.environment.set('workspaceId', 'sample-workspace-id');",
					"}",
					"if (!pm.environment.get('reportId')) {",
					"    pm.environment.set('reportId', 'sample-report-id');",
					"}",
					"if (!pm.environment.get('templateId')) {",
					"    pm.environment.set('templateId', 'sample-template-id');",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Global test script",
					"pm.test('Status code is not 5xx', function () {",
					"    pm.expect(pm.response.code).to.be.below(500);",
					"});",
					"",
					"pm.test('Response time is less than 5000ms', function () {",
					"    pm.expect(pm.response.responseTime).to.be.below(5000);",
					"});",
					"",
					"// Save reportId from create response for subsequent requests",
					"if (pm.response.code === 201 && pm.response.json().id) {",
					"    pm.environment.set('reportId', pm.response.json().id);",
					"}"
				]
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "token",
			"value": "your-auth-token-here",
			"type": "string"
		},
		{
			"key": "workspaceId",
			"value": "sample-workspace-id",
			"type": "string"
		},
		{
			"key": "reportId",
			"value": "sample-report-id",
			"type": "string"
		},
		{
			"key": "templateId",
			"value": "sample-template-id",
			"type": "string"
		}
	]
}
