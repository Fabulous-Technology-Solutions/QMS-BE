      "name": "Create or Update Notification Setting",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"workspaceId\": \"{{workspaceId}}\",\n  \"settings\": {\n    \"email\": true,\n    \"sms\": false,\n    \"push\": true\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/notification-setting",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "notification-setting"]
        }
      }
